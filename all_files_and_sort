#!/bin/bash
#Кейс: Собрать все файлы в 1-н, убрать дублирующиеся шапки,отсортировать только уникальные строки
#Собирает содержимое всех файлов в 1-н, удаляет шапки, сортирует по уникальным значениям в первом столбце (при разделителе ';')
cat 5*.csv > myfile.csv | awk -F '[;]' '$1=="tt_id" && FNR != 1 {next} {print}' myfile.csv | sort -ur -t ";" -k1,1 > myfile_sort.csv
